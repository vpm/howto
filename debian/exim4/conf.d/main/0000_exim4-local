
# ports
daemon_smtp_ports = 25:465:587

# ipv6
disable_ipv6 = true

# tls
tls_on_connect_ports = 465
REMOTE_SMTP_SMARTHOST_HOSTS_REQUIRE_TLS = *
MAIN_TLS_ENABLE = yes
MAIN_TLS_CERTIFICATE = CONFDIR/mail.vpm.net.ua.cert.pem
MAIN_TLS_PRIVATEKEY = CONFDIR/mail.vpm.net.ua.privkey.pem
MAIN_HARDCODE_PRIMARY_HOSTNAME = mail.vpm.net.ua

# LOG
log_file_path = syslog

# ldap
ldap_default_servers = localhost
LDAP_DN_USER = user=cn=admin,dc=vpm,dc=net,dc=ua
LDAP_DN_PASS = pass=ldap_password
LDAP_DC_BASE = dc=vpm,dc=net,dc=ua
LDAP_OU_USERS = ou=MailUsers
LDAP_OU_GROUPS = ou=MailGroups
LDAP_OU_ALIASES = ou=MailAliases

# dkim
DKIM_DOMAIN = vpm.net.ua
DKIM_KEY_FILE = CONFDIR/default._domainkey.vpm.net.ua.key
DKIM_PRIVATE_KEY = CONFDIR/default._domainkey.vpm.net.ua.key
DKIM_SELECTOR = default

# acl rcpt
CHECK_RCPT_LOCAL_ACL_FILE = CONFDIR/local-acl-check-rcpt
